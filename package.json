{
	"name": "phantombuster-browser-extension",
	"version": "1.1.7",
	"description": "PhantomBuster Browser Extension",
	"main": "index.js",
	"scripts": {
		"build:contentscript-background": "NODE_ENV=production webpack --config webpack.config.js",
		"build:dev": "NODE_ENV=development webpack --config webpack.config.js",
		"build:sentry": "NODE_ENV=sentry webpack --config webpack.config.js",
		"build:beta": "cpy dist/*.js dist/*.css beta && ./scripts/combineJsonFiles.js manifest.json manifest.beta.json > beta/manifest.json",
		"build": "npm-run-all build:contentscript-background build:beta",
		"watch:contentscript-background": "NODE_ENV=development webpack --config webpack.config.js -w",
		"watch": "npm-run-all -p watch:*",
		"clean": "rm -rf dist beta dev-build *.zip && cpy manifest.json dist && cpy src/assets/* dist/assets && cpy src/assets/* beta/assets && cpy src/assets/* dev-build/assets",
		"prebuild": "npm run clean",
		"prebuild:dev": "npm run clean",
		"prewatch": "npm run clean",
		"zip:release": "cd dist && bestzip ../release.zip *",
		"zip:beta": "cd beta && bestzip ../beta.zip *"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^14.14.25",
		"@types/webextension-polyfill": "^0.9.1",
		"bestzip": "^2.1.7",
		"cpy-cli": "^3.1.1",
		"css-loader": "^5.0.2",
		"mini-css-extract-plugin": "^1.3.6",
		"node-sass": "^7.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"sass-loader": "^13.0.2",
		"ts-loader": "^8.0.16",
		"ts-node": "^9.1.1",
		"tslint": "^6.1.3",
		"typescript": "^4.1.3",
		"webpack": "^5.21.2",
		"webpack-cli": "^4.5.0"
	},
	"dependencies": {
		"@sentry/browser": "^7.40.0",
		"@sentry/integrations": "^7.40.0",
		"webextension-polyfill": "^0.10.0"
	}
}
