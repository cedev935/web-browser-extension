{
	"name": "webextensions-typescript",
	"version": "1.0.10",
	"description": "Phantombuster Cookie",
	"main": "index.js",
	"scripts": {
		"eslint": "eslint --max-warnings 60 'libs/**/*.js' 'store/**/*.js'",
		"eslint:error": "eslint --max-warnings 40 'libs/**/*.js' 'store/**/*.js' --quiet",
		"tslint": "tslint 'libs/**/*.ts' 'store/**/*.ts'",
		"build": "npm run tslint && tsc --diagnostics",
		"build:watch": "tsc --watch",
		"zip": "zip -r phantombuster-web-extension.zip ./js/data.js ./js/background.js ./manifest.json ./img ./js/main.js",
		"build:prod": "rimraf phantombuster-web-extension.zip && npm run build && npm run zip",
		"test": "mocha -r ts-node/register src/tests/**/*.test.ts",
		"test:zapier": "mocha -r ts-node/register src/tests/zapier.test.ts",
		"coverage": "nyc -r locv -e .ts -x \"*.test.ts\" npm run test"
	},
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.2.7",
		"@types/chrome": "0.0.78",
		"@types/mocha": "^5.2.7",
		"@types/node": "^13.1.8",
		"@types/puppeteer": "^2.0.0",
		"chai": "^4.2.0",
		"dotenv": "^8.2.0",
		"eslint": "^5.1.0",
		"mocha": "^7.0.0",
		"nyc": "^15.0.0",
		"puppeteer": "^2.0.0",
		"rimraf": "^3.0.0",
		"ts-node": "^8.6.2",
		"tsc": "^1.20150623.0",
		"tslint": "^5.12.1",
		"typescript": "^3.2.2"
	},
	"dependencies": {}
}
