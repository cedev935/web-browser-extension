{
	"manifest_version": 2,
	"name": "Phantombuster",
	"version": "1.0.10",
	"description": "Makes Phantombuster easier to use by automatically retrieving your session cookies",
	"icons": {
		"48":"img/icon.png",
		"128": "img/icon.png"
	},
	"homepage_url": "http://www.phantombuster.com/",
	"background": {
		"scripts": [
			"/js/background.js",
			"/js/data.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"128": "img/icon.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["*://*.phantombuster.com/*", "*://zapier.com/*" ],
			"run_at": "document_end",
			"js": [
				"/js/main.js",
				"/js/data.js"
			]
		}
	],
	"permissions": [
		"notifications",
		"cookies",
		"*://*.phantombuster.com/*",
		"*://*.facebook.com/*",
		"*://github.com/*",
		"*://*.instagram.com/*",
		"*://*.intercom.io/*",
		"*://*.linkedin.com/*",
		"*://*.medium.com/*",
		"*://*.producthunt.com/*",
		"*://*.slack.com/*",
		"*://*.twitter.com/*",
		"*://*.uber.com/*",
		"*://*.youtube.com/*",
		"*://*.quora.com/*"
	]
}
