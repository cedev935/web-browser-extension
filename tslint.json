{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"quotemark": [true, "double", "avoid-template"],
		"semicolon": [true, "never"],
		"indent": [true, "tabs"],
		"no-var-requires": false,
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
		"no-console": [true, "assert", "clear", "count", "debug", "dir", "dirxml", "group", "groupCollapsed", "groupEnd", "info", "table", "time", "timeEnd", "trace", "warn"],
		"no-any": true,
		"ordered-imports": false,
		"max-classes-per-file": false,
		"max-line-length": [false, 150],
		"object-literal-sort-keys": false,
		"no-return-await": true,
		"ignoreDefinitionFiles": false,
		"no-floating-promises": [true, "Bluebird"],
		"await-promise": [true, "Bluebird"],
		"no-duplicate-imports": true,
		"cyclomatic-complexity": [true, 10],
		"no-magic-numbers": true,
		"ban": [true,
			{ "name": ["browser", "tabs", "sendMessage"], "message": "Use sendMessage() instead."},
			{ "name": ["browser", "runtime", "sendMessage"], "message": "Use this.sendMessage() instead."},
			{ "name": ["browser", "notifications", "create"], "message": "Use sendNotification() instead"}
		]
	},
	"rulesDirectory": []
}
